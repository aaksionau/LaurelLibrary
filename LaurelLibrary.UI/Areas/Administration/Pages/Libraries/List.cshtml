@page
@using Microsoft.AspNetCore.Authorization
@model LaurelLibrary.UI.Areas.Administration.Pages.Libraries.ListModel;
@{
    ViewData["Title"] = "Libraries";
}

@section Head {
    <link rel="stylesheet" href="~/css/library-list.css" asp-append-version="true" />
}

<div class="card">
    <div class="card-header">
        <h3 class="d-inline">Libraries</h3>
        <a class="btn btn-primary float-end d-inline" asp-area="Administration" asp-page="/Libraries/Update">Add
            Library</a>
    </div>
    <div class="card-body">
        @if (Model.Libraries.Any())
        {
            <div class="row">
                @foreach (var library in Model.Libraries)
                {
                    <div class="col-md-6 col-xl-4 mb-4">
                        <div class="card corporate-library-card h-100">
                            <a asp-area="Administration" asp-page="/Libraries/Details" asp-route-id="@library.LibraryId"
                                class="stretched-link text-decoration-none"></a>
                            
                            <!-- Status Indicator -->
                            <div class="corporate-status-bar"></div>
                            
                            <!-- Card Header -->
                            <div class="corporate-header">
                                <div class="corporate-library-info">
                                    <h5 class="corporate-title">@library.Name</h5>
                                    @if (!string.IsNullOrWhiteSpace(library.Alias))
                                    {
                                        <span class="corporate-alias">(@library.Alias)</span>
                                    }
                                </div>
                                <div class="corporate-menu">
                                    <a class="corporate-menu-btn" asp-area="Administration" asp-page="/Libraries/Update"
                                        asp-route-libraryId="@library.LibraryId" title="Edit Library">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </a>
                                </div>
                            </div>
                            
                            <!-- Card Body -->
                            <div class="corporate-body">
                                @if (!string.IsNullOrWhiteSpace(library.Description))
                                {
                                    <div class="corporate-description">
                                        <p>@(library.Description.Length > 120 ? library.Description.Substring(0, 120) + "..." : library.Description)</p>
                                    </div>
                                }
                                
                                @if (!string.IsNullOrWhiteSpace(library.Address))
                                {
                                    <div class="corporate-meta-item">
                                        <div class="corporate-meta-label">
                                            <i class="bi bi-geo-alt"></i>
                                            Location
                                        </div>
                                        <div class="corporate-meta-value">@library.Address</div>
                                    </div>
                                }
                                
                                <div class="corporate-meta-item">
                                    <div class="corporate-meta-label">
                                        <i class="bi bi-calendar3"></i>
                                        Established
                                    </div>
                                    <div class="corporate-meta-value">@library.CreatedAt.ToString("MMMM dd, yyyy")</div>
                                </div>
                            </div>
                            
                            <!-- Statistics Section -->
                            <div class="corporate-stats-section">
                                <h6 class="corporate-stats-title">Library Statistics</h6>
                                <div class="corporate-stats-grid">
                                    <div class="corporate-stat-item">
                                        <div class="corporate-stat-icon books">
                                            <i class="bi bi-journal-text"></i>
                                        </div>
                                        <div class="corporate-stat-details">
                                            <span class="corporate-stat-number">@library.BooksCount</span>
                                            <span class="corporate-stat-label">Total Books</span>
                                        </div>
                                    </div>
                                    <div class="corporate-stat-item">
                                        <div class="corporate-stat-icon students">
                                            <i class="bi bi-mortarboard"></i>
                                        </div>
                                        <div class="corporate-stat-details">
                                            <span class="corporate-stat-number">@library.StudentsCount</span>
                                            <span class="corporate-stat-label">Active Students</span>
                                        </div>
                                    </div>
                                    <div class="corporate-stat-item">
                                        <div class="corporate-stat-icon admins">
                                            <i class="bi bi-person-badge"></i>
                                        </div>
                                        <div class="corporate-stat-details">
                                            <span class="corporate-stat-number">@library.AdministratorsCount</span>
                                            <span class="corporate-stat-label">Administrators</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Card Footer -->
                            <div class="corporate-footer">
                                <span class="corporate-footer-text">Manage Library</span>
                                <i class="bi bi-arrow-right"></i>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-building empty-state-icon"></i>
                <h4 class="empty-state-title">No libraries found</h4>
                <p class="empty-state-description">Get started by adding your first library to begin managing your collection.</p>
                <a class="btn empty-state-btn" asp-area="Administration" asp-page="/Libraries/Update">
                    <i class="bi bi-plus-circle me-2"></i>Add Your First Library
                </a>
            </div>
        }
    </div>
</div>