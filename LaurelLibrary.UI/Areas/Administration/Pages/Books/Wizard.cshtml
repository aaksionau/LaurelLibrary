@page
@model LaurelLibrary.UI.Areas.Administration.Pages.Books.WizardModel

<div class="container-fluid">
    <!-- ISBN Search Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Search by ISBN</h5>
                    <button type="button" id="scanToggleBtn" class="btn btn-success shadow-lg scan-pulse">
                        <i class="fas fa-barcode"></i> Start Scanning
                    </button>
                </div>
                <div class="card-body">
                    <form method="post" id="wizardForm">
                        <input type="hidden" asp-for="IsScanning" />

                        <div class="row">
                            <div class="col-12">
                                <div class="input-group">
                                    <input id="searchIsbnInput" class="form-control" asp-for="SearchIsbn"
                                        placeholder="Enter ISBN (e.g., 978-0-123456-78-9) or add 'p' at the end to generate printable barcode" />
                                    <button type="button" id="clearIsbnBtn" class="btn btn-secondary"
                                        title="Clear ISBN">
                                        Clear
                                    </button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i> Search
                                    </button>
                                </div>
                                <small class="form-text text-muted mt-1">
                                    <i class="fas fa-info-circle"></i>
                                    Tip: Add 'p' at the end of any ISBN (e.g., "123456789p") to generate a printable
                                    barcode without searching.
                                </small>
                            </div>
                        </div>

                        <div class="mt-3">
                            @if (Model.BookFound)
                            {
                                <div class="alert alert-info border-info" role="alert">
                                    <i class="fas fa-search text-info me-2"></i>
                                    <strong>Book Found!</strong> @Model.SearchMessage
                                </div>
                            }

                            @if (Model.BookSaved)
                            {
                                <div class="alert alert-success border-success" role="alert">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <strong>Success!</strong> @Model.SaveMessage
                                </div>
                            }
                        </div>

                        @if (Model.ShowBarcodeForPrint && Model.BarcodeImageBytes != null)
                        {
                            <div class="mt-4">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h6 class="card-title mb-0">Generated Barcode</h6>
                                        <div>
                                            <button type="button" class="btn btn-primary btn-sm" onclick="printBarcode()">
                                                <i class="fas fa-print"></i> Print
                                            </button>
                                            <a href="@Url.Page("./Wizard", "BarcodeImage")" class="btn btn-secondary btn-sm"
                                                download="barcode.png">
                                                <i class="fas fa-download"></i> Download
                                            </a>
                                        </div>
                                    </div>
                                    <div class="card-body text-center">
                                        <img id="barcodeImage"
                                            src="data:image/png;base64,@Convert.ToBase64String(Model.BarcodeImageBytes)"
                                            alt="Generated Barcode" class="img-fluid border rounded p-2 bg-white"
                                            style="max-width: 400px;" />
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Book Form Section -->
                        @if (Model.Book != null)
                        {
                            <div class="mt-4">
                                <hr />
                                <h5 class="mb-3">
                                    @if (Model.BookFound)
                                    {
                                        <text>Edit Book Details</text>
                                    }
                                    else
                                    {
                                        <text>Create New Book</text>
                                    }
                                </h5>

                                <partial name="_BookFormContent" for="Book" />

                                <div class="mb-3 text-end">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-save"></i> Save Book
                                    </button>
                                    <a asp-page="./List" class="btn btn-secondary ms-2">Cancel</a>
                                </div>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/book-wizard.js" asp-append-version="true"></script>
}