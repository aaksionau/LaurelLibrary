@page "{libraryId:guid}/{kioskId:int?}"
@model LaurelLibrary.UI.Areas.Administration.Pages.Kiosks.UpdateModel

<div class="d-flex align-items-center justify-content-between mt-3 mb-4">
    <div class="d-flex align-items-center gap-3">
        <a class="btn btn-link p-0 icon-link" asp-page="/Libraries/Details" asp-route-id="@Model.Kiosk.LibraryId" aria-label="Back to library">
            <i class="bi bi-arrow-left fs-3" aria-hidden="true"></i>
        </a>
        <h1 class="mb-0">@Model.PageTitle</h1>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Kiosk.KioskId" />
            <input type="hidden" asp-for="Kiosk.LibraryId" />

            <div class="mb-3">
                <label asp-for="Kiosk.Location" class="form-label"></label>
                <input asp-for="Kiosk.Location" class="form-control" placeholder="e.g., Main Entrance, Second Floor, East Wing" />
                <span asp-validation-for="Kiosk.Location" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Kiosk.BrowserFingerprint" class="form-label"></label>
                <input asp-for="Kiosk.BrowserFingerprint" class="form-control" placeholder="Auto-generated or manually entered" />
                <span asp-validation-for="Kiosk.BrowserFingerprint" class="text-danger"></span>
                <div class="form-text">
                    Unique identifier for this kiosk's browser. Leave empty for auto-generation.
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-2"></i>Save Kiosk
                </button>
                <a class="btn btn-secondary" asp-page="/Libraries/Details" asp-route-id="@Model.Kiosk.LibraryId">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
