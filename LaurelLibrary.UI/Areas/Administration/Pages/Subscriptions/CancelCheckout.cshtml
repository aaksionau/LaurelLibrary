@page
@model LaurelLibrary.UI.Areas.Administration.Pages.Subscriptions.CancelCheckoutModel
@{
    ViewData["Title"] = "Checkout Cancelled";
}

<!-- This page automatically redirects, but we can add content if needed -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg"
                style="background-color: var(--color-bg-light);">
                <div class="card-body text-center py-5">
                    <i class="fas fa-times-circle fa-4x mb-4" style="color: var(--color-accent);"></i>
                    <h3 class="mb-3" style="color: var(--color-text-primary); font-weight: 700;">Checkout Cancelled</h3>
                    <p class="mb-3" style="color: var(--color-text-secondary); font-size: 1.1em;">Your subscription
                        creation was cancelled.</p>
                    <p style="color: var(--color-text-secondary);">
                        <i class="fas fa-spinner fa-spin me-2" style="color: var(--color-primary);"></i>
                        Redirecting to subscription management...
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>