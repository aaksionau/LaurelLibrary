@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                                <div class="card-header text-white" style="background-color: #245C4F;">
                    <h3 class="mb-0">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                    </h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show"
                        role="alert"></div>

                    <!-- Login Form Section -->
                    <section class="mb-4">
                        <form id="account" method="post">
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label">
                                    <i class="bi bi-envelope me-1"></i>Email
                                </label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                    aria-required="true" placeholder="Enter your email address" autofocus />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label">
                                    <i class="bi bi-lock me-1"></i>Password
                                </label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                                    aria-required="true" placeholder="Enter your password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox mb-4">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div class="d-grid gap-2">
                                <button id="login-submit" type="submit" class="btn btn-lg btn-primary">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Log in
                                </button>
                            </div>
                            <hr class="my-4">
                            <div class="text-center">
                                <p class="mb-2">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">
                                        <i class="bi bi-question-circle me-1"></i>Forgot your password?
                                    </a>
                                </p>
                                <p class="mb-2">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                                        class="text-decoration-none">
                                        <i class="bi bi-person-plus me-1"></i>Register as a new user
                                    </a>
                                </p>
                                <p class="mb-0">
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"
                                        class="text-decoration-none">
                                        <i class="bi bi-envelope-check me-1"></i>Resend email confirmation
                                    </a>
                                </p>
                            </div>
                        </form>
                    </section>

                    <!-- Separator -->
                    <div class="position-relative my-4">
                        <hr class="w-100" style="border-top: 2px solid #6c757d;" />
                        <span
                            class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted fw-semibold">
                            Or authenticate with
                        </span>
                    </div>

                    <!-- External Authentication Section -->
                    <section>
                        <div class="text-center">
                            @{
                                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                {
                                    <div class="text-muted small">
                                        <p>
                                            <i class="bi bi-info-circle me-1"></i>
                                            No external authentication services configured.
                                        </p>
                                    </div>
                                }
                                else
                                {
                                    <form id="external-account" asp-page="./ExternalLogin"
                                        asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                        <div class="d-flex justify-content-center">
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit"
                                                    class="btn btn-light btn-lg d-flex align-items-center justify-content-center gap-3"
                                                    name="provider" value="@provider.Name"
                                                    title="Log in using your @provider.DisplayName account"
                                                    style="border: none; border-radius: 8px; padding: 12px 24px;">
                                                    <i class="bi bi-microsoft" style="font-size: 28px; color: #00A4EF;"></i>
                                                    <span style="font-size: 18px; font-weight: 500;">Microsoft</span>
                                                </button>
                                            }
                                        </div>
                                    </form>
                                }
                            }
                        </div>
                    </section>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-page="/Index" class="text-decoration-none">
                    <i class="bi bi-arrow-left me-1"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}