@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-white" style="background-color: #245C4F;">
                    <h3 class="mb-0">
                        <i class="bi bi-envelope-check-fill me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div class="mt-4">
                        <i class="bi bi-envelope-check text-success" style="font-size: 4rem;"></i>
                        <h4 class="mt-3 text-success">Registration Successful!</h4>
                        <p class="text-muted mb-4">
                            Thank you for registering with MyLibrarian! We've sent a confirmation email to:
                        </p>
                        <p class="fw-bold text-primary">@Model.Email</p>
                        <p class="text-muted">
                            Please check your email and click the confirmation link to activate your account.
                        </p>
                    </div>

                    <div class="mt-4">
                        <p class="text-muted small">
                            Didn't receive the email? Check your spam folder or
                            <a asp-page="./ResendEmailConfirmation" asp-route-email="@Model.Email"
                                class="text-decoration-none">
                                resend the confirmation email
                            </a>.
                        </p>

                        <a asp-page="./Login" class="btn btn-primary mt-3">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Go to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>