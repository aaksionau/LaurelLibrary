@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-white" style="background-color: #6c9fa8;">
                    <h3 class="mb-0">
                        <i class="bi bi-key-fill me-2"></i>Reset Password
                    </h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert"></div>
                    
                    <p class="text-muted mb-4">
                        <i class="bi bi-info-circle me-1"></i>
                        Enter your email and we'll send you a link to reset your password.
                    </p>

                    <section>
                        <form method="post">
                            <div class="mb-4">
                                <label asp-for="Input.Email" class="form-label">
                                    <i class="bi bi-envelope me-1"></i>Email
                                </label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                                    placeholder="Enter your email address" autofocus />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-lg text-white"
                                    style="background-color: #6c9fa8; border-color: #6c9fa8;">
                                    <i class="bi bi-send me-2"></i>Send reset link
                                </button>
                            </div>
                        </form>
                    </section>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-page="./Login" class="text-decoration-none">
                    <i class="bi bi-arrow-left me-1"></i>Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}