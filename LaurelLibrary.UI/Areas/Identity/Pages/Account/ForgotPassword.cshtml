@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>
            <p class="text-center text-muted mb-4">Enter your email and we'll send you a link to reset your password.
            </p>

            <section>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                            placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg"
                        style="background-color: #0078D4; border-color: #0078D4; color: white;">Send reset link</button>
                </form>
            </section>

            <div class="mt-4 text-center">
                <p>
                    <a asp-page="./Login">Back to login</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}