@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-white" style="background-color: #245C4F;">
                    <h3 class="mb-0">
                        <i class="bi bi-envelope-check-fill me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert @(Model.StatusMessage.Contains("Thank you") ? "alert-success" : "alert-danger") alert-dismissible fade show"
                            role="alert">
                            <i
                                class="bi @(Model.StatusMessage.Contains("Thank you") ? "bi-check-circle-fill" : "bi-exclamation-triangle-fill") me-2"></i>
                            @Model.StatusMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model.StatusMessage != null && Model.StatusMessage.Contains("Thank you"))
                    {
                        <div class="mt-4">
                            <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                            <h4 class="mt-3 text-success">Email Confirmed Successfully!</h4>
                            <p class="text-muted">Your email address has been confirmed. You can now access all features of
                                your account.</p>
                        </div>
                    }
                    else
                    {
                        <div class="mt-4">
                            <i class="bi bi-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                            <h4 class="mt-3 text-warning">Email Confirmation Failed</h4>
                            <p class="text-muted">There was an issue confirming your email address. The link may be expired
                                or invalid.</p>
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-page="./Login" class="btn btn-primary me-2">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Go to Login
                        </a>
                        @if (Model.StatusMessage != null && !Model.StatusMessage.Contains("Thank you"))
                        {
                            <a asp-page="./ResendEmailConfirmation" class="btn btn-outline-primary">
                                <i class="bi bi-envelope-check me-1"></i>Resend Confirmation
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>