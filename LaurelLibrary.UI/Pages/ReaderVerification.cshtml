@page
@model LaurelLibrary.UI.Pages.ReaderVerificationModel
@{
    ViewData["Title"] = "Verify Your Code";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-shield-check me-2"></i>Verify Your Code
                    </h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>@Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <p class="text-muted mb-4">
                        Please enter the 6-digit verification code that was sent to your email address.
                    </p>

                    <form method="post">
                        <div class="mb-4">
                            <label asp-for="VerificationCode" class="form-label">
                                <i class="bi bi-key-fill me-1"></i>Verification Code
                            </label>
                            <input asp-for="VerificationCode" 
                                   class="form-control form-control-lg text-center" 
                                   placeholder="000000" 
                                   maxlength="6"
                                   pattern="\d{6}"
                                   inputmode="numeric"
                                   autofocus 
                                   style="letter-spacing: 0.5em; font-size: 1.5rem;" />
                            <span asp-validation-for="VerificationCode" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-lg me-2"></i>Verify & Continue
                            </button>
                        </div>
                    </form>

                    <hr class="my-3">

                    <div class="text-center">
                        <p class="text-muted small mb-2">Didn't receive the code?</p>
                        <form method="post" asp-page-handler="ResendCode" class="d-inline">
                            <button type="submit" class="btn btn-link text-decoration-none">
                                <i class="bi bi-arrow-clockwise me-1"></i>Resend Code
                            </button>
                        </form>
                    </div>

                    <div class="alert alert-info mt-3 mb-0" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <small>The verification code will expire in 10 minutes.</small>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-page="/ReaderLogin" class="text-decoration-none">
                    <i class="bi bi-arrow-left me-1"></i>Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Auto-format verification code input
        document.addEventListener('DOMContentLoaded', function() {
            const codeInput = document.querySelector('input[name="VerificationCode"]');
            
            if (codeInput) {
                codeInput.addEventListener('input', function(e) {
                    // Only allow digits
                    this.value = this.value.replace(/\D/g, '');
                    
                    // Limit to 6 digits
                    if (this.value.length > 6) {
                        this.value = this.value.slice(0, 6);
                    }
                });
            }
        });
    </script>
}
