<!-- Subscription Plans Section -->
<section id="plans" class="py-5" style="background-color: white;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-5">
                <h2 class="display-4 fw-bold mb-4" style="color: var(--color-text-primary);">Choose Your Plan</h2>
                <p class="lead" style="color: var(--color-text-secondary);">Flexible pricing options that grow with your
                    library</p>
            </div>
        </div>
        <div class="row g-4 justify-content-center">
            @foreach (var plan in Model.SubscriptionPlans)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm @(plan.Name == "Library Lover" ? "shadow" : "")"
                        style="border-radius: 15px; overflow: hidden; @(plan.Name == "Library Lover" ? "transform: scale(1.05); border: 3px solid var(--color-secondary) !important;" : "")">
                        <div class="card-header text-center py-4"
                            style="@(plan.Name == "Bookworm Basic" ? "background-color: var(--color-bg-light); border-bottom: 2px solid var(--color-border);" : 
                                                                                                                                                                                                                                          plan.Name == "Library Lover" ? "background: linear-gradient(135deg, var(--color-secondary), var(--color-secondary-hover)); color: white;" :
                                                                                                                                                                                                                                          "background: linear-gradient(135deg, var(--color-primary), var(--color-primary-hover)); color: white;")">
                            @if (plan.Name == "Library Lover")
                            {
                                <div class="badge mb-2"
                                    style="background-color: rgba(255,255,255,0.2); color: white; padding: 5px 15px; border-radius: 20px;">
                                    Most Popular</div>
                            }
                            <h4 class="mb-0"
                                style="@(plan.Name == "Bookworm Basic" ? "color: var(--color-text-primary);" : "")">
                                @plan.Name</h4>
                            <p class="@(plan.Name == "Bookworm Basic" ? "text-muted" : "opacity-90") mb-0">@plan.Description
                            </p>
                        </div>
                        <div class="card-body d-flex flex-column p-4">
                            <div class="text-center mb-4">
                                @if (plan.MonthlyPrice == 0)
                                {
                                    <h2 class="fw-bold" style="color: var(--color-primary);">Free</h2>
                                    <p class="text-muted">Forever</p>
                                }
                                else
                                {
                                    var monthlyCost = plan.MonthlyPrice * 12;
                                    var savings = monthlyCost - plan.YearlyPrice;
                                    var savingsPercentage = Math.Round((savings / monthlyCost) * 100);

                                    <h2 class="fw-bold"
                                        style="color: @(plan.Name == "Library Lover" ? "var(--color-secondary)" : "var(--color-primary)");">
                                        $@plan.MonthlyPrice.ToString("F2")</h2>
                                    <p class="text-muted">per month</p>
                                    <p class="small text-muted">or $@plan.YearlyPrice.ToString("F2")/year (save
                                        @(savingsPercentage)%)</p>
                                }
                            </div>
                            <ul class="list-unstyled mb-4">
                                @foreach (var feature in plan.Features)
                                {
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill me-2" style="color: var(--color-success);"></i>
                                        @if (feature.Contains("(*)"))
                                        {
                                            <span>@feature.Replace("(*)", " *")</span>
                                        }
                                        else if (plan.Name != "Bookworm Basic" && (feature.Contains("Unlimited") ||
                                        feature.Contains("Advanced") || feature.Contains("AI-powered") ||
                                        feature.Contains("Priority") || feature.Contains("Custom")))
                                        {
                                            <strong>@feature</strong>
                                        }
                                        else
                                        {
                                            <span>@feature</span>
                                        }
                                    </li>
                                }
                            </ul>
                            <div class="mt-auto">
                                @if (plan.MonthlyPrice == 0)
                                {
                                    <a href="/Account/Register" class="btn btn-outline-primary w-100"
                                        style="border-color: var(--color-primary); color: var(--color-primary); border-radius: 10px; padding: 12px;">Get
                                        Started Free</a>
                                }
                                else
                                {
                                    <a href="/Account/Register" class="btn w-100"
                                        style="background-color: @(plan.Name == "Library Lover" ? "var(--color-secondary)" : "var(--color-primary)"); color: white; border-radius: 10px; padding: 12px; border: none;">Start
                                        Free Trial</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="row mt-5">
                <div class="col-12 text-center">
                    <p class="text-muted">All plans include a 30-day free trial. No credit card required for the free
                        tier.</p>
                    <p class="text-muted"><small>* Features marked with an asterisk are on our roadmap and will be added
                            in future updates.</small></p>
                </div>
            </div>
        </div>
</section>

<!-- FAQ Section -->
<section id="faq" class="py-5" style="background-color: white;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="text-center mb-5">
                    <h2 class="display-4 fw-bold mb-4" style="color: var(--color-text-primary);">Frequently Asked
                        Questions</h2>
                    <p class="lead" style="color: var(--color-text-secondary);">Get answers to common questions about
                        MyLibrarian</p>
                </div>

                <div class="accordion" id="faqAccordion">
                    <!-- FAQ Item 1 -->
                    <div class="accordion-item mb-3"
                        style="border-radius: 10px; border: 1px solid var(--color-border);">
                        <h3 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#faq1" aria-expanded="false" aria-controls="faq1"
                                style="background-color: var(--color-bg-light); border-radius: 10px; padding: 20px;">
                                <strong>What is the difference between kiosk and mobile checkout?</strong>
                            </button>
                        </h3>
                        <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body" style="padding: 20px;">
                                For homeschools and small public organizations, patrons typically use a computer kiosk
                                to search for books and check them out, providing a centralized checkout experience.
                                For private collections, readers use their mobile phones to scan barcodes and manage
                                their book checkouts, offering more convenient and personal access to the library
                                system.
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Item 2 -->
                    <div class="accordion-item mb-3"
                        style="border-radius: 10px; border: 1px solid var(--color-border);">
                        <h3 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#faq2" aria-expanded="false" aria-controls="faq2"
                                style="background-color: var(--color-bg-light); border-radius: 10px; padding: 20px;">
                                <strong>How do I add books to my library?</strong>
                            </button>
                        </h3>
                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body" style="padding: 20px;">
                                You can add books in several ways: manually enter book details, scan ISBN barcodes using
                                your device's camera, or upload a CSV file with multiple books. Our system automatically
                                fetches book information from online databases to save you time.
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Item 3 -->
                    <div class="accordion-item mb-3"
                        style="border-radius: 10px; border: 1px solid var(--color-border);">
                        <h3 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#faq3" aria-expanded="false" aria-controls="faq3"
                                style="background-color: var(--color-bg-light); border-radius: 10px; padding: 20px;">
                                <strong>What is AI-powered age classification?</strong>
                            </button>
                        </h3>
                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body" style="padding: 20px;">
                                Our AI system automatically analyzes book content, themes, and complexity to suggest
                                appropriate age ranges. This helps librarians, parents, and educators quickly identify
                                suitable books for different reading levels and age groups. Once age classification is
                                added to your books, users can incorporate it into their semantic search queries, such
                                as "find adventure books for 8-10 year olds" or "mystery novels appropriate for teens",
                                making it easier to discover age-appropriate content.
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Item 4 -->
                    <div class="accordion-item mb-3"
                        style="border-radius: 10px; border: 1px solid var(--color-border);">
                        <h3 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#faq4" aria-expanded="false" aria-controls="faq4"
                                style="background-color: var(--color-bg-light); border-radius: 10px; padding: 20px;">
                                <strong>Can I manage multiple libraries with one account?</strong>
                            </button>
                        </h3>
                        <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body" style="padding: 20px;">
                                Yes! The Bibliotheca Plus and Pro plans support multiple libraries. This is perfect for
                                organizations with multiple locations, individuals managing separate collections
                                (e.g., home library, classroom library, and office library), or professionals managing
                                completely unrelated libraries such as consulting for different schools, churches, or
                                community organizations. Each library is kept completely separate with its own books,
                                readers, and settings.
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Item 6 -->
                    <div class="accordion-item mb-3"
                        style="border-radius: 10px; border: 1px solid var(--color-border);">
                        <h3 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#faq6" aria-expanded="false" aria-controls="faq6"
                                style="background-color: var(--color-bg-light); border-radius: 10px; padding: 20px;">
                                <strong>Is MyLibrarian suitable for homeschooling?</strong>
                            </button>
                        </h3>
                        <div id="faq6" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body" style="padding: 20px;">
                                Absolutely! MyLibrarian is designed with homeschooling families in mind. Track reading
                                progress, manage curriculum resources, organize books by subject or reading level, and
                                encourage reading habits with built-in progress tracking and rewards.
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Item 7 -->
                    <div class="accordion-item mb-3"
                        style="border-radius: 10px; border: 1px solid var(--color-border);">
                        <h3 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#faq7" aria-expanded="false" aria-controls="faq7"
                                style="background-color: var(--color-bg-light); border-radius: 10px; padding: 20px;">
                                <strong>What happens to my data if I cancel?</strong>
                            </button>
                        </h3>
                        <div id="faq7" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body" style="padding: 20px;">
                                You can export all your library data (books, readers, checkout history) at any time.
                                After cancellation, your data is retained for 30 days to allow for reactivation. After
                                that period, data is permanently deleted for your privacy and security.
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Item 8 -->
                    <div class="accordion-item mb-3"
                        style="border-radius: 10px; border: 1px solid var(--color-border);">
                        <h3 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#faq8" aria-expanded="false" aria-controls="faq8"
                                style="background-color: var(--color-bg-light); border-radius: 10px; padding: 20px;">
                                <strong>Do you offer support and training?</strong>
                            </button>
                        </h3>
                        <div id="faq8" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body" style="padding: 20px;">
                                Yes! All plans include access to our knowledge base and community forums. Plus and Pro
                                plans include email support, while Pro plans get priority support with faster response
                                times. We also offer video tutorials and setup assistance.
                            </div>
                        </div>
                    </div>

