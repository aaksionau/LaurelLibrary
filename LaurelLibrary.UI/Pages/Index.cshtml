@page
@model LaurelLibrary.UI.Pages.IndexModel
@{
    ViewData["Title"] = "MyLibrarian - Your Personal Library Management Solution";
}

<!-- Hero Section -->
<section id="home" class="hero-section"
    style="background: linear-gradient(135deg, var(--color-bg-light) 0%, #f0ede7 100%); padding: 60px 0; min-height: 40vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-2 fw-bold mb-4" style="color: var(--color-text-primary);">MyLibrarian</h1>
                    <p class="lead mb-4" style="color: var(--color-text-secondary); font-size: 1.5rem;">
                        The perfect library management solution for private libraries, homeschool libraries, and church
                        libraries
                    </p>
                    <p class="mb-5" style="color: var(--color-text-secondary); font-size: 1.1rem;">
                        Transform your book collection into a professionally managed library with our intuitive,
                        community-focused platform designed for smaller libraries that need powerful features without
                        the complexity.
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <img src="~/images/mylibrarian.png" alt="MyLibrarian Logo" class="hero-logo-large"
                        style="max-height: 300px; width: auto; opacity: 0.8;">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose MyLibrarian Section -->
<section id="why-choose" class="py-5" style="background-color: white;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-5">
                <h2 class="display-4 fw-bold mb-4" style="color: var(--color-text-primary);">Why Choose MyLibrarian?
                </h2>
                <p class="lead" style="color: var(--color-text-secondary);">Built specifically for the unique needs of
                    smaller, community-focused libraries</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="feature-card h-100 p-4 text-center"
                    style="background-color: var(--color-bg-light); border-radius: 15px; border: 2px solid var(--color-border);">
                    <i class="bi bi-house-heart"
                        style="font-size: 3rem; color: var(--color-secondary); margin-bottom: 20px;"></i>
                    <h4 class="mb-3" style="color: var(--color-text-primary);">Perfect for Private Libraries</h4>
                    <p style="color: var(--color-text-secondary);">
                        Designed for personal collections, family libraries, and private reading spaces. Easy setup,
                        intuitive interface, and features that scale with your growing collection.
                    </p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-card h-100 p-4 text-center"
                    style="background-color: var(--color-bg-light); border-radius: 15px; border: 2px solid var(--color-border);">
                    <i class="bi bi-mortarboard"
                        style="font-size: 3rem; color: var(--color-accent); margin-bottom: 20px;"></i>
                    <h4 class="mb-3" style="color: var(--color-text-primary);">Homeschool Friendly</h4>
                    <p style="color: var(--color-text-secondary);">
                        Track reading levels, manage curriculum resources, and encourage reading habits. Built-in age
                        classification and progress tracking make it perfect for educational environments.
                    </p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-card h-100 p-4 text-center"
                    style="background-color: var(--color-bg-light); border-radius: 15px; border: 2px solid var(--color-border);">
                    <i class="bi bi-people"
                        style="font-size: 3rem; color: var(--color-primary); margin-bottom: 20px;"></i>
                    <h4 class="mb-3" style="color: var(--color-text-primary);">Community Libraries</h4>
                    <p style="color: var(--color-text-secondary);">
                        Ideal for church libraries, community centers, and small organizations. Manage multiple user
                        groups, track usage, and foster community engagement through reading.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

