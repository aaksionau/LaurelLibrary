<!-- Feedback Section -->
<section id="feedback" class="py-5" style="background-color: var(--color-bg-light);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                        <i class="bi bi-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="card shadow-lg border-0" style="border-radius: 15px;">
                    <div class="card-header text-center py-4"
                        style="background: linear-gradient(135deg, var(--color-primary), var(--color-primary-hover)); color: white; border-radius: 15px 15px 0 0;">
                        <h2 class="mb-0">
                            <i class="bi bi-chat-heart me-2"></i>
                            Send Us Your Feedback
                        </h2>
                        <p class="mb-0 opacity-90">We'd love to hear from you!</p>
                    </div>

                    <div class="card-body p-5">
                        <form method="post" asp-page-handler="Feedback">
                            @Html.AntiForgeryToken()

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Feedback.Name" class="form-label fw-bold">
                                        <i class="bi bi-person me-1"></i>
                                        Your Name *
                                    </label>
                                    <input asp-for="Feedback.Name" class="form-control form-control-lg"
                                        style="border-radius: 10px; border: 2px solid var(--color-border);"
                                        placeholder="Enter your full name" required>
                                    <span asp-validation-for="Feedback.Name" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Feedback.Email" class="form-label fw-bold">
                                        <i class="bi bi-envelope me-1"></i>
                                        Your Email *
                                    </label>
                                    <input asp-for="Feedback.Email" type="email" class="form-control form-control-lg"
                                        style="border-radius: 10px; border: 2px solid var(--color-border);"
                                        placeholder="your.email@example.com" required>
                                    <span asp-validation-for="Feedback.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Feedback.FeedbackType" class="form-label fw-bold">
                                    <i class="bi bi-tags me-1"></i>
                                    Feedback Type *
                                </label>
                                <select asp-for="Feedback.FeedbackType" class="form-select form-select-lg"
                                    style="border-radius: 10px; border: 2px solid var(--color-border);" required>
                                    <option value="General">General Feedback</option>
                                    <option value="Bug Report">Bug Report</option>
                                    <option value="Feature Request">Feature Request</option>
                                    <option value="Support">Support Request</option>
                                    <option value="Compliment">Compliment</option>
                                    <option value="Complaint">Complaint</option>
                                </select>
                                <span asp-validation-for="Feedback.FeedbackType" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Feedback.Subject" class="form-label fw-bold">
                                    <i class="bi bi-chat-text me-1"></i>
                                    Subject *
                                </label>
                                <input asp-for="Feedback.Subject" class="form-control form-control-lg"
                                    style="border-radius: 10px; border: 2px solid var(--color-border);"
                                    placeholder="Brief description of your feedback" required>
                                <span asp-validation-for="Feedback.Subject" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Feedback.Message" class="form-label fw-bold">
                                    <i class="bi bi-chat-square-text me-1"></i>
                                    Your Message *
                                </label>
                                <textarea asp-for="Feedback.Message" class="form-control" rows="4"
                                    style="border-radius: 10px; border: 2px solid var(--color-border);"
                                    placeholder="Please share your detailed feedback, suggestions, or concerns..."
                                    required></textarea>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Please be as specific as possible to help us better understand your feedback.
                                </div>
                                <span asp-validation-for="Feedback.Message" class="text-danger"></span>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-lg"
                                    style="background-color: var(--color-primary); color: white; border-radius: 10px; padding: 12px 40px; border: none;">
                                    <i class="bi bi-send me-2"></i>
                                    Send Feedback
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

