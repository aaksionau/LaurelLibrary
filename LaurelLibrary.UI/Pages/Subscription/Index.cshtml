@page
@using LaurelLibrary.Domain.Enums
@model LaurelLibrary.UI.Pages.Subscription.IndexModel
@{
    ViewData["Title"] = "Subscription Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-credit-card me-2"></i>
                Subscription Management
            </h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    <!-- Current Subscription Status -->
    @if (Model.CurrentSubscription != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            Current Subscription
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="fw-bold">@Model.CurrentSubscription.PlanName</h6>
                                <p class="text-muted mb-2">@Model.CurrentSubscription.PlanDescription</p>
                                <p class="mb-1">
                                    <strong>Status:</strong> 
                                    <span class="badge bg-@(Model.CurrentSubscription.Status == SubscriptionStatus.Active ? "success" : "warning")">
                                        @Model.CurrentSubscription.Status
                                    </span>
                                </p>
                                @if (Model.CurrentSubscription.Amount > 0)
                                {
                                    <p class="mb-1">
                                        <strong>Amount:</strong> 
                                        @Model.CurrentSubscription.Amount.ToString("C") / @Model.CurrentSubscription.BillingInterval
                                    </p>
                                    <p class="mb-1">
                                        <strong>Next Billing:</strong> 
                                        @Model.CurrentSubscription.NextBillingDate.ToString("MMMM dd, yyyy")
                                    </p>
                                }
                            </div>
                            <div class="col-md-6">
                                @if (Model.CurrentSubscription.Status == SubscriptionStatus.Active && Model.CurrentSubscription.Amount > 0)
                                {
                                    <button type="button" class="btn btn-outline-danger" onclick="confirmCancelSubscription()">
                                        <i class="fas fa-times me-2"></i>
                                        Cancel Subscription
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Usage Summary -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Usage Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h6>Books</h6>
                            <div class="progress mb-3">
                                <div class="progress-bar" role="progressbar" 
                                     style="width: @(Model.Usage?.BookUsagePercentage ?? 0)%"
                                     aria-valuenow="@(Model.Usage?.BookUsagePercentage ?? 0)" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                </div>
                            </div>
                            <small class="text-muted">
                                @(Model.Usage?.CurrentBooks ?? 0) / @(Model.Usage?.MaxBooks == -1 ? "Unlimited" : (Model.Usage?.MaxBooks ?? 0).ToString()) books
                            </small>
                        </div>
                        <div class="col-md-4">
                            <h6>Readers</h6>
                            <div class="progress mb-3">
                                <div class="progress-bar" role="progressbar" 
                                     style="width: @(Model.Usage?.ReaderUsagePercentage ?? 0)%"
                                     aria-valuenow="@(Model.Usage?.ReaderUsagePercentage ?? 0)" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                </div>
                            </div>
                            <small class="text-muted">
                                @(Model.Usage?.CurrentReaders ?? 0) / @(Model.Usage?.MaxReaders == -1 ? "Unlimited" : (Model.Usage?.MaxReaders ?? 0).ToString()) readers
                            </small>
                        </div>
                        <div class="col-md-4">
                            <h6>Libraries</h6>
                            <div class="progress mb-3">
                                <div class="progress-bar" role="progressbar" 
                                     style="width: @(Model.Usage?.LibraryUsagePercentage ?? 0)%"
                                     aria-valuenow="@(Model.Usage?.LibraryUsagePercentage ?? 0)" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                </div>
                            </div>
                            <small class="text-muted">
                                @(Model.Usage?.CurrentLibraries ?? 0) / @(Model.Usage?.MaxLibraries == -1 ? "Unlimited" : (Model.Usage?.MaxLibraries ?? 0).ToString()) libraries
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Available Plans -->
    <div class="row">
        <div class="col-12">
            <h4 class="mb-3">Available Plans</h4>
        </div>
    </div>

    <div class="row">
        @foreach (var plan in Model.AvailablePlans)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 @(plan.IsCurrentPlan ? "border-primary" : "")">
                    @if (plan.IsCurrentPlan)
                    {
                        <div class="card-header bg-primary text-white text-center">
                            <strong>Current Plan</strong>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <div class="text-center mb-3">
                            <h5 class="card-title">@plan.Name</h5>
                            <p class="card-text text-muted">@plan.Description</p>
                            <div class="pricing mb-3">
                                @if (plan.MonthlyPrice == 0)
                                {
                                    <h3 class="text-primary">Free</h3>
                                }
                                else
                                {
                                    <div class="d-flex justify-content-center align-items-baseline">
                                        <h3 class="text-primary me-2">@plan.MonthlyPrice.ToString("C")</h3>
                                        <small class="text-muted">/month</small>
                                    </div>
                                    <div class="text-muted">
                                        <small>or @plan.YearlyPrice.ToString("C")/year</small>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <strong>Limits:</strong>
                            <ul class="list-unstyled mt-2">
                                <li>
                                    <i class="fas fa-book text-primary me-2"></i>
                                    @(plan.MaxBooks == -1 ? "Unlimited" : plan.MaxBooks.ToString()) books
                                </li>
                                <li>
                                    <i class="fas fa-users text-primary me-2"></i>
                                    @(plan.MaxReaders == -1 ? "Unlimited" : plan.MaxReaders.ToString()) readers
                                </li>
                                <li>
                                    <i class="fas fa-building text-primary me-2"></i>
                                    @(plan.MaxLibraries == -1 ? "Unlimited" : plan.MaxLibraries.ToString()) libraries
                                </li>
                            </ul>
                        </div>

                        <div class="mb-3">
                            <strong>Features:</strong>
                            <ul class="list-unstyled mt-2">
                                @foreach (var feature in plan.Features)
                                {
                                    <li>
                                        <i class="fas fa-check text-success me-2"></i>
                                        @feature
                                    </li>
                                }
                            </ul>
                        </div>

                        <div class="mt-auto">
                            @if (plan.IsCurrentPlan)
                            {
                                <button class="btn btn-outline-primary w-100" disabled>
                                    Current Plan
                                </button>
                            }
                            else if (plan.MonthlyPrice == 0)
                            {
                                <button class="btn btn-primary w-100" onclick="subscribeToPlan('@plan.Tier', 'month')">
                                    Switch to Free Plan
                                </button>
                            }
                            else
                            {
                                <div class="d-grid gap-2">
                                    <button class="btn btn-primary" onclick="subscribeToPlan('@plan.Tier', 'month')">
                                        Subscribe Monthly
                                    </button>
                                    <button class="btn btn-outline-primary" onclick="subscribeToPlan('@plan.Tier', 'year')">
                                        Subscribe Yearly (Save 17%)
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Cancel Subscription Modal -->
<div class="modal fade" id="cancelSubscriptionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancel Subscription</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel your subscription? This action cannot be undone.</p>
                <ul>
                    <li>Your subscription will remain active until the end of your current billing period</li>
                    <li>You will lose access to premium features after cancellation</li>
                    <li>Your data will be preserved but may be subject to plan limits</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Subscription</button>
                <form method="post" asp-page-handler="Cancel" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Cancel Subscription</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function subscribeToPlan(tier, interval) {
            const data = {
                tier: tier,
                billingInterval: interval
            };

            fetch('@Url.Page("Index", "Subscribe")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (data.redirectUrl) {
                        window.location.href = data.redirectUrl;
                    }
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while processing your request.');
            });
        }

        function confirmCancelSubscription() {
            $('#cancelSubscriptionModal').modal('show');
        }
    </script>
}