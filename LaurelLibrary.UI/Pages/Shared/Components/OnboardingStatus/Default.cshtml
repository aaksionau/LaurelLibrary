@using LaurelLibrary.Services.Abstractions.Dtos
@model OnboardingStatusDto

@if (!Model.IsCompleted)
{
    <div class="alert alert-warning alert-dismissible fade show mb-3" role="alert">
        <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <div class="flex-grow-1">
                <strong>Setup Incomplete</strong><br>
                <small>Complete @(Model.TotalSteps - Model.CompletedSteps) more step@(Model.TotalSteps - Model.CompletedSteps == 1 ? "" : "s") to fully set up your library.</small>
            </div>
            <a href="~/Administration/Home/Onboarding" class="btn btn-warning btn-sm ms-3">
                <i class="fas fa-rocket me-1"></i>Continue Setup
            </a>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}