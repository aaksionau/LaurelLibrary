<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyLibrarian</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mylibrarian-palette.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LaurelLibrary.UI.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Head", required: false)
</head>

<body>
    <header class="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <div class="container-fluid d-flex justify-content-between align-items-center">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/#home" style="color: var(--color-text-primary);">
                                    <i class="bi bi-house me-1"></i>Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/#features" style="color: var(--color-text-primary);">
                                    <i class="bi bi-gear me-1"></i>Features
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/#plans" style="color: var(--color-text-primary);">
                                    <i class="bi bi-tag me-1"></i>Pricing
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/#feedback" style="color: var(--color-text-primary);">
                                    <i class="bi bi-chat-heart me-1"></i>Feedback
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-sm ms-2" href="/#plans"
                                    style="background-color: var(--color-primary); border-color: var(--color-primary); color: white !important; padding: 6px 12px; border-radius: 6px;">
                                    <i class="bi bi-rocket me-1"></i>Get Started
                                </a>
                            </li>
                        </ul>
                        <div class="ms-auto">
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <main role="main" class="col pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        getComputerFingerPrint();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>