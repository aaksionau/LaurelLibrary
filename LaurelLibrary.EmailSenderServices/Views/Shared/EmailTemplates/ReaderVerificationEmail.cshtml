@model LaurelLibrary.EmailSenderServices.Dtos.ReaderVerificationEmailDto

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reader Login Verification Code - MyLibrarian</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #2E2B28;
            background-color: #F9F6F1;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
        }

        .header {
            background-color: #245C4F;
            color: white;
            padding: 30px;
            text-align: center;
        }

        .header h1 {
            margin: 0;
            font-size: 28px;
            font-weight: 300;
        }

        .content {
            padding: 40px 30px;
        }

        .greeting {
            font-size: 18px;
            margin-bottom: 20px;
            color: #245C4F;
        }

        .message {
            font-size: 16px;
            margin-bottom: 30px;
            line-height: 1.8;
            color: #7A6F66;
        }

        .verification-code {
            background-color: #F9F6F1;
            padding: 25px;
            text-align: center;
            margin: 30px 0;
        }

        .code {
            font-size: 36px;
            font-weight: bold;
            color: #245C4F;
            letter-spacing: 8px;
            font-family: 'Courier New', monospace;
        }

        .code-label {
            font-size: 14px;
            color: #7A6F66;
            margin-bottom: 10px;
        }

        .security-note {
            background-color: rgba(230, 182, 85, 0.1);
            border-left: 4px solid #E6B655;
            padding: 15px 20px;
            margin: 30px 0;
            font-size: 14px;
            color: #8a6a14;
        }

        .footer {
            background-color: #F9F6F1;
            padding: 30px;
            text-align: center;
            border-top: 1px solid #e8e3db;
            font-size: 14px;
            color: #7A6F66;
        }

        .footer .library-info {
            margin-bottom: 15px;
            font-weight: 600;
            color: #2E2B28;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>MyLibrarian</h1>
            <p>Reader Login Verification</p>
        </div>
        <div class="content">
            <div class="greeting">
                Hello @Model.ReaderName,
            </div>
            <div class="message">
                You have requested to log in to your MyLibrarian account. Please use the verification code below to
                complete your login and access your borrowed books.
            </div>
            <div class="verification-code">
                <div class="code-label">YOUR VERIFICATION CODE</div>
                <div class="code">@Model.VerificationCode</div>
            </div>
            <div class="message">
                Enter this code on the verification page to access your library account.
            </div>
            <div class="security-note">
                <strong>Security Notice:</strong> This code will expire in 10 minutes for your security. If you did not
                request this code, you can safely ignore this email. Your account remains secure.
            </div>
        </div>
        <div class="footer">
            <div class="library-info">
                MyLibrarian System
            </div>
            <div>
                This is an automated message from the MyLibrarian system.
                Please do not reply to this email.
            </div>
            <div style="margin-top: 15px; font-size: 12px; color: #adb5bd;">
                Â© @DateTime.Now.Year MyLibrarian. All rights reserved.
            </div>
        </div>
    </div>
</body>

</html>