@model LaurelLibrary.EmailSenderServices.Dtos.BookCheckoutEmailDto

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Checkout Confirmation - MyLibrarian</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #2E2B28;
            background-color: #F9F6F1;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
        }

        .header {
            background-color: #245C4F;
            color: white;
            padding: 30px;
            text-align: center;
        }

        .header h1 {
            margin: 0;
            font-size: 28px;
            font-weight: 300;
        }

        .header .icon {
            font-size: 48px;
            margin-bottom: 15px;
            display: block;
        }

        .content {
            padding: 40px 30px;
        }

        .greeting {
            font-size: 18px;
            margin-bottom: 20px;
            color: #245C4F;
        }

        .message {
            font-size: 16px;
            margin-bottom: 30px;
            line-height: 1.8;
            color: #7A6F66;
        }

        .due-date-box {
            background-color: rgba(36, 92, 79, 0.1);
            border: 1px solid #245C4F;
            color: #245C4F;
            padding: 20px;
            text-align: center;
            margin: 30px 0;
        }

        .due-date-box .label {
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 10px;
            opacity: 0.9;
        }

        .due-date-box .date {
            font-size: 24px;
            font-weight: 700;
            margin-top: 5px;
        }

        .checkout-info {
            background-color: #F9F6F1;
            padding: 20px;
            margin: 30px 0;
        }

        .checkout-info .info-row {
            padding: 8px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .checkout-info .label {
            font-weight: 600;
            color: #245C4F;
        }

        .checkout-info .value {
            color: #2E2B28;
        }

        .books-section {
            margin: 30px 0;
        }

        .books-section h2 {
            color: #245C4F;
            font-size: 20px;
            margin-bottom: 20px;
            border-bottom: 2px solid #245C4F;
            padding-bottom: 10px;
        }

        .book-item {
            background-color: #F9F6F1;
            padding: 20px;
            margin-bottom: 15px;
        }

        .book-item:hover {
            background-color: #f0ede5;
        }

        .book-item .book-title {
            font-size: 18px;
            font-weight: 700;
            color: #2E2B28;
            margin-bottom: 10px;
        }

        .book-item .book-authors {
            font-size: 14px;
            color: #7A6F66;
            margin-bottom: 8px;
            font-style: italic;
        }

        .book-item .book-details {
            font-size: 13px;
            color: #7A6F66;
            margin-top: 10px;
            padding-top: 10px;
            border-top: 1px solid #e8e3db;
        }

        .book-item .book-details span {
            margin-right: 15px;
        }

        .reminder-box {
            background-color: rgba(230, 182, 85, 0.1);
            border-left: 4px solid #E6B655;
            padding: 15px 20px;
            margin: 30px 0;
        }

        .reminder-box .icon {
            color: #8a6a14;
            font-weight: bold;
            margin-right: 8px;
        }

        .reminder-box strong {
            color: #2E2B28;
        }

        .library-info-box {
            background-color: #F9F6F1;
            padding: 20px;
            margin: 30px 0;
        }

        .library-info-box h3 {
            color: #245C4F;
            font-size: 18px;
            margin-top: 0;
            margin-bottom: 15px;
        }

        .library-info-box p {
            margin: 8px 0;
            color: #7A6F66;
            line-height: 1.6;
        }

        .library-info-box .library-name {
            font-weight: 700;
            font-size: 16px;
            color: #245C4F;
            margin-bottom: 10px;
        }

        .footer {
            background-color: #F9F6F1;
            padding: 30px;
            text-align: center;
            border-top: 1px solid #e8e3db;
            font-size: 14px;
            color: #7A6F66;
        }

        .footer .library-info {
            margin-bottom: 15px;
            font-weight: 600;
            color: #2E2B28;
        }

        .footer .support-info {
            margin-top: 20px;
            font-style: italic;
        }

        .tips-section {
            background-color: rgba(36, 92, 79, 0.1);
            border-left: 4px solid #245C4F;
            padding: 15px 20px;
            margin: 30px 0;
        }

        .tips-section h3 {
            margin-top: 0;
            color: #245C4F;
            font-size: 16px;
        }

        .tips-section ul {
            margin: 10px 0;
            padding-left: 20px;
        }

        .tips-section li {
            color: #2E2B28;
            margin: 8px 0;
        }

        .book-count {
            background-color: #245C4F;
            color: white;
            display: inline-block;
            padding: 5px 15px;
            font-weight: 600;
            font-size: 14px;
            margin-left: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>MyLibrarian</h1>
            <p>Book Checkout Confirmation</p>
        </div>

        <div class="content">
            <div class="greeting">
                Hello @Model.ReaderName,
            </div>

            <div class="message">
                Thank you for checking out books from <strong>@Model.LibraryName</strong>!
                This email confirms your recent book checkout. Please review the details below
                and make note of the due date to avoid any late fees.
            </div>

            <div class="checkout-info">
                <div class="info-row">
                    <span class="label">Checkout Date:</span>
                    <span class="value">@Model.CheckedOutDate.ToString("MMMM dd, yyyy 'at' h:mm tt")</span>
                </div>
                <div class="info-row">
                    <span class="label">Total Books:</span>
                    <span class="value">@Model.Books.Count</span>
                </div>
            </div>

            <div class="due-date-box">
                <div class="label">Please Return By</div>
                <div class="date">@Model.DueDate.ToString("MMMM dd, yyyy")</div>
            </div>

            <div class="books-section">
                <h2>
                    Checked Out Books
                    <span class="book-count">@Model.Books.Count @(Model.Books.Count == 1 ? "Book" : "Books")</span>
                </h2>

                @foreach (var book in Model.Books)
                {
                    <div class="book-item">
                        <div class="book-title">@book.Title</div>
                        <div class="book-authors">by @book.Authors</div>
                        @if (!string.IsNullOrEmpty(book.Isbn) || !string.IsNullOrEmpty(book.Publisher))
                        {
                            <div class="book-details">
                                @if (!string.IsNullOrEmpty(book.Isbn))
                                {
                                    <span><strong>ISBN:</strong> @book.Isbn</span>
                                }
                                @if (!string.IsNullOrEmpty(book.Publisher))
                                {
                                    <span><strong>Publisher:</strong> @book.Publisher</span>
                                }
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="reminder-box">
                <strong>Important Reminder:</strong>
                Please return all books by <strong>@Model.DueDate.ToString("MMMM dd, yyyy")</strong>
                to avoid late fees. You can renew your books online if you need more time,
                subject to availability and renewal limits.
            </div>

            <div class="tips-section">
                <h3>Quick Tips</h3>
                <ul>
                    <li>Keep your books in good condition to avoid replacement fees</li>
                    <li>Set a reminder a few days before the due date</li>
                    <li>You can return books to any of our library locations</li>
                    <li>Check your account online to manage your checkouts and renewals</li>
                    <li>Contact us if you need to report a damaged or lost book</li>
                </ul>
            </div>

            @if (!string.IsNullOrEmpty(Model.LibraryAddress) || !string.IsNullOrEmpty(Model.LibraryDescription))
            {
                <div class="library-info-box">
                    <h3>Library Information</h3>
                    <div class="library-name">@Model.LibraryName</div>
                    @if (!string.IsNullOrEmpty(Model.LibraryDescription))
                    {
                        <p>@Model.LibraryDescription</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.LibraryAddress))
                    {
                        <p><strong>Address:</strong> @Model.LibraryAddress</p>
                    }
                </div>
            }
        </div>

        <div class="footer">
            <div class="library-info">
                MyLibrarian System
            </div>
            <div>
                This is an automated message from the MyLibrarian system.
                Please do not reply to this email.
            </div>
            <div class="support-info">
                Need help? Contact our support team for assistance with your library account.
            </div>
            <div style="margin-top: 15px; font-size: 12px; color: #adb5bd;">
                Â© @DateTime.Now.Year MyLibrarian. All rights reserved.
            </div>
        </div>
    </div>
</body>

</html>