@model LaurelLibrary.EmailSenderServices.Dtos.PasswordResetEmailDto

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset - MyLibrarian</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #2E2B28;
            background-color: #F9F6F1;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
        }

        .header {
            background-color: #245C4F;
            color: white;
            padding: 30px;
            text-align: center;
        }

        .header h1 {
            margin: 0;
            font-size: 28px;
            font-weight: 300;
        }

        .header .icon {
            font-size: 48px;
            margin-bottom: 15px;
            display: block;
        }

        .content {
            padding: 40px 30px;
        }

        .greeting {
            font-size: 18px;
            margin-bottom: 20px;
            color: #245C4F;
        }

        .message {
            font-size: 16px;
            margin-bottom: 30px;
            line-height: 1.8;
            color: #7A6F66;
        }

        .reset-button {
            display: inline-block;
            background-color: #245C4F;
            color: white !important;
            padding: 15px 30px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            text-align: center;
            transition: all 0.3s ease;
            margin: 20px 0;
        }

        .reset-button:hover {
            background-color: #1e4a3f;
        }

        .button-container {
            text-align: center;
            margin: 30px 0;
        }

        .alternative-link {
            background-color: #F9F6F1;
            padding: 20px;
            margin: 30px 0;
            font-size: 14px;
            color: #7A6F66;
            word-break: break-all;
        }

        .alternative-link strong {
            color: #2E2B28;
        }

        .security-note {
            background-color: rgba(230, 182, 85, 0.1);
            border-left: 4px solid #E6B655;
            padding: 15px 20px;
            margin: 30px 0;
        }

        .security-note .icon {
            color: #8a6a14;
            font-weight: bold;
            margin-right: 8px;
        }

        .footer {
            background-color: #F9F6F1;
            padding: 30px;
            text-align: center;
            border-top: 1px solid #e8e3db;
            font-size: 14px;
            color: #7A6F66;
        }

        .footer .library-info {
            margin-bottom: 15px;
            font-weight: 600;
            color: #2E2B28;
        }

        .footer .support-info {
            margin-top: 20px;
            font-style: italic;
        }

        .expiration-warning {
            background-color: rgba(36, 92, 79, 0.1);
            border: 1px solid #245C4F;
            color: #245C4F;
            padding: 15px;
            margin: 20px 0;
            font-size: 14px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>MyLibrarian</h1>
            <p>Password Reset Request</p>
        </div>

        <div class="content">
            <div class="greeting">
                Hello @Model.UserName,
            </div>

            <div class="message">
                We received a request to reset the password for your MyLibrarian account associated with
                <strong>@Model.Email</strong>. If you made this request, please click the button below to
                create a new password.
            </div>

            <div class="button-container">
                <a href="@Model.ResetUrl" class="reset-button">
                    Reset My Password
                </a>
            </div>

            <div class="expiration-warning">
                <strong>Important:</strong> This password reset link will expire in 24 hours for your security.
                If you don't reset your password within this time, you'll need to request a new reset link.
            </div>

            <div class="alternative-link">
                <strong>Can't click the button?</strong><br>
                Copy and paste this link into your browser:<br>
                @Model.ResetUrl
            </div>

            <div class="security-note">
                <strong>Security Notice:</strong> If you didn't request a password reset, you can safely ignore
                this email. Your account remains secure, and no changes have been made. Consider changing your
                password if you believe someone else is trying to access your account.
            </div>
        </div>

        <div class="footer">
            <div class="library-info">
                MyLibrarian System
            </div>
            <div>
                This is an automated message from the MyLibrarian system.
                Please do not reply to this email.
            </div>
            <div class="support-info">
                Need help? Contact our support team for assistance with your library account.
            </div>
            <div style="margin-top: 15px; font-size: 12px; color: #adb5bd;">
                Â© @DateTime.Now.Year MyLibrarian. All rights reserved.
            </div>
        </div>
    </div>
</body>

</html>