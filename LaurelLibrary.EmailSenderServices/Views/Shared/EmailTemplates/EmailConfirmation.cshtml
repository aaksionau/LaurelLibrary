@model LaurelLibrary.EmailSenderServices.Dtos.EmailConfirmationDto

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Your Email - MyLibrarian</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #2E2B28;
            background-color: #F9F6F1;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
        }

        .header {
            background-color: #245C4F;
            color: white;
            padding: 30px;
            text-align: center;
        }

        .header h1 {
            margin: 0;
            font-size: 28px;
            font-weight: 300;
        }

        .content {
            padding: 40px 30px;
        }

        .greeting {
            font-size: 18px;
            margin-bottom: 20px;
            color: #245C4F;
        }

        .message {
            font-size: 16px;
            margin-bottom: 30px;
            line-height: 1.8;
            color: #7A6F66;
        }

        .confirm-button {
            display: inline-block;
            background-color: #245C4F;
            color: white !important;
            padding: 15px 30px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            text-align: center;
            transition: all 0.3s ease;
            margin: 20px 0;
        }

        .confirm-button:hover {
            background-color: #1e4a3f;
        }

        .button-container {
            text-align: center;
            margin: 30px 0;
        }

        .alternative-link {
            background-color: #F9F6F1;
            padding: 20px;
            margin: 30px 0;
            font-size: 14px;
            color: #7A6F66;
            word-break: break-all;
        }

        .alternative-link strong {
            color: #2E2B28;
        }

        .security-note {
            background-color: rgba(230, 182, 85, 0.1);
            border-left: 4px solid #E6B655;
            padding: 15px 20px;
            margin: 30px 0;
        }

        .security-note .icon {
            color: #8a6a14;
            font-weight: bold;
            margin-right: 8px;
        }

        .footer {
            background-color: #F9F6F1;
            padding: 30px;
            text-align: center;
            border-top: 1px solid #e8e3db;
            font-size: 14px;
            color: #7A6F66;
        }

        .footer .library-info {
            margin-bottom: 15px;
            font-weight: 600;
            color: #2E2B28;
        }

        .footer .support-info {
            margin-top: 20px;
            font-style: italic;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>MyLibrarian</h1>
            <p>Email Confirmation</p>
        </div>

        <div class="content">
            <div class="greeting">
                Hello @Model.UserName,
            </div>

            <div class="message">
                Thank you for joining MyLibrarian! We're excited to have you as part of our reading community.
                To get started and access all the features of your account, please confirm your email address
                <strong>@Model.Email</strong> by clicking the button below.
            </div>

            <div class="button-container">
                <a href="@Model.ConfirmationUrl" class="confirm-button">
                    Confirm My Email Address
                </a>
            </div>

            <div class="alternative-link">
                <strong>Can't click the button?</strong><br>
                Copy and paste this link into your browser:<br>
                @Model.ConfirmationUrl
            </div>

            <div class="security-note">
                <strong>Security Notice:</strong> If you didn't create an account with MyLibrarian,
                you can safely ignore this email. No account will be activated without email confirmation.
            </div>
        </div>

        <div class="footer">
            <div class="library-info">
                MyLibrarian System
            </div>
            <div>
                This is an automated message from the MyLibrarian system.
                Please do not reply to this email.
            </div>
            <div class="support-info">
                Need help? Contact our support team for assistance with your library account.
            </div>
            <div style="margin-top: 15px; font-size: 12px; color: #adb5bd;">
                Â© @DateTime.Now.Year MyLibrarian. All rights reserved.
            </div>
        </div>
    </div>
</body>

</html>